{
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "ESNext",
        "outDir": "dist",
        "target": "es2020",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*"]
}
